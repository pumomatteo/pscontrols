{
  "compileOnSave": true,
  "watch": true,
  "compilerOptions": {
    "pretty": false,
    "noEmit": false,
    "module": "CommonJS",
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "noImplicitAny": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "sourceMap": true,
    "declaration": true,
    "declarationDir": "./dist/definitions",
    "strict": true,
    "strictPropertyInitialization": false,
    "noImplicitReturns": true,
    "allowSyntheticDefaultImports": false,
    "target": "ES2020",
    "lib": [
      "esnext",
      "es6",
      "dom",
      "es2016",
      "es2018",
      "es2020"
    ],
    "baseUrl": "./",
    "strictFunctionTypes": false
  },
  "exclude": [
    "./dist",
    "./node_modules"
  ]
}